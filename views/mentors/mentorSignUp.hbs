<form id="formSignUpMentor" method="POST" action="/mentor/signup">
  <div class="container mt-5 mb-5">
    <div class="row d-flex align-items-center justify-content-center">
      <div class="col-md-6">
        <div class="card px-5 py-5"></span>
          <h5 class="mt-3"> Форма регистрации для менторов</h5> <small class="mt-2 text-muted"></small>
          <div class="form-input">
            <i class="fa fa-user"></i>
            <p class="mt-0">Введите ФИО</p> <small class="mt-2 text-muted"></small>
            <input name="name" type="text" class="form-control" placeholder="ФИО">
          </div>
          <div class="form-input">
            <i class="fa fa-user"></i>
            <p class="mt-0">Телефон</p> <small class="mt-2 text-muted"></small>
            <input name="tel" type="text" class="form-control" placeholder="телефон">
          </div>
          <div class="form-input">
            <i class="fa fa-envelope"></i>
            <p class="mt-0">Введите email</p> <small class="mt-2 text-muted"></small>
            <input name="email" type="email" class="form-control" placeholder="Email">
          </div>
          <div class="form-input">
            <i class="fa fa-lock"></i>
            <p class="mt-0">Введите пароль</p> <small class="mt-2 text-muted"></small>
            <input name="password" type="password" class="form-control" placeholder="пароль">
          </div>

          <div class="form-input">
            <i class="fa fa-user"></i>
            <p class="mt-0">Опыт(только число)</p> <small class="mt-2 text-muted"></small>
            <input name="experience" type="number" class="form-control" placeholder="Опыт">
          </div>

          {{!-- <div class="form-input">
            <i class="fa fa-user"></i>
            <p class="mt-0">Навыки</p> <small class="mt-2 text-muted"></small>
            <input name="competencies" type="text" class="form-control" placeholder="Навыки">
          </div> --}}



          <div class="form-input">
            <i class="fa fa-user"></i>
            <p class="mt-0">Сфера деятельности</p> <small class="mt-2 text-muted"></small>

            <input name="domain" type="text" class="form-control" placeholder="Опыт">

          </div>

          <div class="form-input">
            <i class="fa fa-user"></i>

            <p class="mt-0">Оплата за час (в рублях)</p> <small class="mt-2 text-muted"></small>
            <input name="payPerHour" type="text" class="form-control" placeholder="Оплата за час в руб">
          </div>
          {{#if error}}
          <div>{{error}}</div>
          </br>
          {{/if}}





          <button id="signUpManager" class="form-check btn btn-primary mt-4 signup ">Зарегистрироваться</button>
          <div class="text-center mt-4"> <span>Уже зарегистрирован?</span> <a id="loginManager" href="#"
              class="text-decoration-none mylink">Войти</a> </div>
        </div>
      </div>
    </div>
  </div>
</form>
