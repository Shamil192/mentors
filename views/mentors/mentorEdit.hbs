<form id="formSignUpProfi" method="POST" action="/mentor/edit/{{currentProfi.id}}">
  <div class="container mt-5 mb-5">
    <div class="row d-flex align-items-center justify-content-center">
      <div class="col-md-6">
        <div class="card px-5 py-5"></span>
          <h5 class="mt-3"> Форма регистрации для профессионалов</h5> <small class="mt-2 text-muted"></small>

          <div class="form-input">
            <i class="fa fa-user"></i>
            <p class="mt-0">Введите новое ФИО</p> <small class="mt-2 text-muted"></small>
            <input name="name" type="text" class="form-control" placeholder="ФИО" value={{currentProfi.name}}>
          </div>

          <div class="form-input">
            <i class="fa fa-envelope"></i>
            <p class="mt-0">Введите новый тел</p> <small class="mt-2 text-muted"></small>
            <input name="tel" type="tel" class="form-control" placeholder="Тел" value={{currentProfi.tel}}>
          </div>

          <div class="form-input">
            <i class="fa fa-envelope"></i>
            <p class="mt-0">Введите новый email</p> <small class="mt-2 text-muted"></small>
            <input name="email" type="email" class="form-control" placeholder="Email" value={{currentProfi.email}}>
          </div>

          <div class="form-input">
            <i class="fa fa-lock"></i>
            <p class="mt-0">Введите новый пароль</p> <small class="mt-2 text-muted"></small>
            <input name="password" type="password" class="form-control" placeholder="пароль"
              value={{currentProfi.password}}>
          </div>

          <div class="form-input">
            <i class="fa fa-user"></i>
            <p class="mt-0"> Изменит Сферу деятельности</p> <small class="mt-2 text-muted"></small>
            <input name="domain" type="text" class="form-control" placeholder="Сфера деятельности"
              value={{currentProfi.domain}}>
          </div>

          <div class="form-input">
            <i class="fa fa-user"></i>
            <p class="mt-0"> Добавить Навыки</p> <small class="mt-2 text-muted"></small>
            <input name="competencies" type="text" class="form-control" placeholder="Навыки"
              value={{currentProfi.competencies}}>
          </div>

          <div class="form-input">
            <i class="fa fa-user"></i>
            <p class="mt-0"> Изменить Опыт(только число)</p> <small class="mt-2 text-muted"></small>
            <input name="experience" type="number" class="form-control" placeholder="Опыт"
              value={{currentProfi.experience}}>
          </div>

          <input name="ID" type="hidden" class="form-control" placeholder="Опыт" value={{currentProfi._id}}>

          <div class="form-input">
            <i class="fa fa-user"></i>
            <p class="mt-0"> Изменить Оплату за час (в рублях)</p> <small class="mt-2 text-muted"></small>
            <input name="payPerHour" type="text" class="form-control" placeholder="Оплата за час в руб"
              value={{currentProfi.payPerHour}}>
          </div>
          <button id="editManager" class=" form-check btn btn-primary mt-4 signup">Изменить</button>
        </div>
      </div>
    </div>
  </div>
</form>
